@model HospitalSanVicente.Models.Appointment

@{
    ViewData["Title"] = "Editar Cita";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="AppointmentId" />
            <input type="hidden" asp-for="EmailSent" /> <!-- Mantenemos el estado del correo -->
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="PatientId" class="control-label">Paciente</label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.Patients"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="DoctorId" class="control-label">MÃ©dico</label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.Doctors"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="AppointmentDate" class="control-label">Fecha y Hora</label>
                <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Estado</label>
                <select asp-for="Status" class="form-control">
                    <option value="Programada">Programada</option>
                    <option value="Atendida">Atendida</option>
                    <option value="Cancelada">Cancelada</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Notas</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}