@model IEnumerable<HospitalSanVicente.Models.Appointment>

@{
    ViewData["Title"] = "Gestión de Citas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agendar Nueva Cita</a>
</p>

<!-- Formulario de Filtros -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <label for="patientId" class="form-label">Filtrar por Paciente:</label>
            <select name="patientId" class="form-control" asp-items="ViewBag.Patients">
                <option value="">Todos los Pacientes</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="doctorId" class="form-label">Filtrar por Médico:</label>
            <select name="doctorId" class="form-control" asp-items="ViewBag.Doctors">
                <option value="">Todos los Médicos</option>
            </select>
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-info me-2">Filtrar</button>
            <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        </div>
    </div>
</form>

<!-- Tabla de Citas -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Paciente</th>
            <th>Médico</th>
            <th>Fecha y Hora</th>
            <th>Estado</th>
            <th>Correo Enviado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Patient.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Doctor.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.AppointmentDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    @(item.EmailSent ? "Enviado" : "No Enviado")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-warning">Editar</a>
                    
                    @if (item.Status == "Programada")
                    {
                        <!-- Botón para Cancelar -->
                        <form asp-action="ChangeStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.AppointmentId" />
                            <input type="hidden" name="newStatus" value="Cancelada" />
                            <button type="submit" class="btn btn-sm btn-danger">Cancelar</button>
                        </form>
                        
                        <!-- Botón para Marcar como Atendida -->
                        <form asp-action="ChangeStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.AppointmentId" />
                            <input type="hidden" name="newStatus" value="Atendida" />
                            <button type="submit" class="btn btn-sm btn-success">Atendida</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>